<p id="notice"><%= notice %></p>
<table align="center">
  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to image_tag(post.image, style: "width:400px;height:auto;"), post_path(post) %></td>
    </tr>
    <tr>
      <td><%= post.title%><br><br></td>
    </tr>
  <% end %>
</table>

